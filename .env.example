# =============================================================================
# dbt Cloud Demo Automation Tool - Environment Variables Example
# =============================================================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control
# =============================================================================

# -----------------------------------------------------------------------------
# AI Provider Configuration (Optional - can be set in UI)
# -----------------------------------------------------------------------------
# Default AI provider to use (claude, openai)
DEFAULT_AI_PROVIDER=claude

# API Keys - Leave blank to require input in UI
ANTHROPIC_API_KEY=
OPENAI_API_KEY=

# Default model selections
DEFAULT_CLAUDE_MODEL=claude-sonnet-4-5-20250929
DEFAULT_OPENAI_MODEL=gpt-4o

# -----------------------------------------------------------------------------
# GitHub Configuration (Optional - can be set in UI)
# -----------------------------------------------------------------------------
# Your GitHub username or organization for creating demo repos
DEFAULT_GITHUB_ORG=

# GitHub Personal Access Token with 'repo' scope
# Generate at: https://github.com/settings/tokens
GITHUB_TOKEN=

# Template repository to clone from
DBT_TEMPLATE_REPO_URL=https://github.com/colin-thornburg/demo-automation-template.git

# -----------------------------------------------------------------------------
# dbt Cloud Configuration (Optional - can be set in UI)
# -----------------------------------------------------------------------------
# Your dbt Cloud Account ID (found in dbt Cloud URL)
DEFAULT_DBT_ACCOUNT_ID=

# dbt Cloud Service Token (generated in Account Settings > Service Tokens)
# Requires permissions: Account Admin or Project Creator
DBT_CLOUD_SERVICE_TOKEN=

# Default warehouse type
DEFAULT_WAREHOUSE_TYPE=snowflake

# -----------------------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------------------
# Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO
